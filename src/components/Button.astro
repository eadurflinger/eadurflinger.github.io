---
export interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<div class="nav-button">
	<a href={href}>
		<h2>
			{title}
		</h2>
	</a>
</div>
<style>
	.nav-button {
		padding: 5px 40px;
        border: 1px solid #707070;
        border-radius: 8px;
        text-transform: uppercase;
		text-align: center;
	}

	.nav-button > a {
		width: 100%;
		text-decoration: none;
		color: #707070;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
        font-weight: 400;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.nav-button:is(:hover, :focus-within) {
		background-position: 0;
	}
	.nav-button:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
	@media (max-width: 500px) {
        .nav-button {
            padding: 5px 20px;
        }
    }
</style>
